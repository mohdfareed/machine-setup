{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Setup Script",
      "type": "debugpy",
      "request": "launch",
      "module": "machines.${input:machine}.setup",
      "args": [
        "--debug"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current Module",
      "type": "debugpy",
      "request": "launch",
      "module": "${fileDirnameBasename}.${fileBasenameNoExtension}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  // prompt for machine variable
  "inputs": [
    {
      "id": "machine",
      "description": "Machine:",
      "type": "pickString",
      "default": "macos",
      "options": [
        "macos",
        "rpi",
        "codespaces",
      ]
    },
  ]
}
