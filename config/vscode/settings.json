{
  // editor ===========================================================
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  // whitespace =======================================================
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  // visual ===========================================================
  "editor.stickyScroll.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.occurrencesHighlight": "multiFile",
  "workbench.editor.showTabs": "single",
  "workbench.editor.empty.hint": "hidden",
  "workbench.activityBar.location": "top",
  "workbench.tree.enableStickyScroll": true,
  "workbench.colorTheme": "One Dark Pro",
  "oneDarkPro.editorTheme": "Dark Modern",
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,
  "oneDarkPro.markdownStyle": false,
  "editor.rulers": [
    80
  ],
  // font =============================================================
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.smoothScrolling": true,
  // TODO - check if terminal ligature is supported
  // vscode ===========================================================
  "window.openWithoutArgumentsInNewWindow": "on",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false,
  // suggestions ======================================================
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  // terminal =========================================================
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.enableVisualBell": true,
  "accessibility.signals.terminalBell": {
    "sound": "on"
  },
  // git ==============================================================
  "git.allowForcePush": true,
  "git.autofetch": "all",
  "git.ignoreLegacyWarning": true,
  "git.confirmSync": false,
  "diffEditor.renderSideBySide": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.graph.minimap.enabled": false,
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.ai.experimental.openai.model": "gpt-4-turbo-preview",
  "multiDiffEditor.experimental.enabled": true,
  // copilot ==========================================================
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  // comment anchors ==================================================
  "commentAnchors.scrollPosition": "center",
  "commentAnchors.tags.displayLineNumber": false,
  "commentAnchors.tags.sortMethod": "type",
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "enabled": false,
      "scope": "hidden"
    },
    "REVIEW": {
      "highlightColor": "#00ff84",
      "iconColor": "#00ff84",
      "scope": "workspace"
    }
  },
  // vim ==============================================================
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // markdown =========================================================
  "markdown.preview.typographer": true,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "always"
    },
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  // python ===========================================================
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.enablePytestSupport": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.REPL.enableREPLSmartSend": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "notebook.lineNumbers": "on",
  "notebook.formatOnCellExecution": true,
  "notebook.formatOnSave.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "python.testing.pytestArgs": [
    "--color=yes"
  ],
  "pylint.args": [
    "--enable-all-extensions",
    "--disable=while_used",
    "--disable=too-few-public-methods"
  ],
  "mypy-type-checker.args": [
    "--check-untyped-defs"
  ],
  "black-formatter.args": [
    "--line-length",
    "79"
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  // c# ===============================================================
  "[csharp]": {
    "editor.codeActionsOnSave": {
      "source.addMissingImports": "explicit"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
  "omnisharp.organizeImportsOnFormat": true,
  // go ===============================================================
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // lua ==============================================================
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua",
    "editor.tabSize": 2
  },
  // latex ============================================================
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  // misc =============================================================
  "godotTools.editorPath.godot4": "${GODOT_PATH}"
  // REVIEW - manually modified settings ======================================
}
