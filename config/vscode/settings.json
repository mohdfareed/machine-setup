{
  // editor
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.guides.bracketPairs": true,

  // formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // whitespace
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,

  // visual
  "editor.rulers": [80],
  "editor.stickyScroll.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",

  // theme
  "workbench.colorTheme": "One Dark Pro",
  "oneDarkPro.editorTheme": "Dark Modern",
  "oneDarkPro.bold": true,
  "oneDarkPro.vivid": true,
  "oneDarkPro.markdownStyle": false,

  // font
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 13,
  // REVIEW - check if terminal ligature is supported

  // vscode
  "window.openWithoutArgumentsInNewWindow": "on",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.untitled.hint": "hidden",
  "explorer.confirmDelete": false,

  // suggestions and completion
  "editor.hover.above": false,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,

  // terminal
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableBell": true,

  // git
  "git.allowForcePush": true,
  "git.autofetch": "all",
  "diffEditor.renderSideBySide": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,

  // copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },

  // vim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // comment anchors
  "commentAnchors.scrollPosition": "center",
  "commentAnchors.tags.displayLineNumber": false,
  "commentAnchors.tags.sortMethod": "type",

  // markdown
  "markdown.preview.typographer": true,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "[markdown]": {
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": true
    },
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // python
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "black-formatter.args": ["--line-length", "79"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  // lua
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua",
    "editor.tabSize": 2
  }
}
