# theme
ZSH_THEME="common"

# plugins
plugins=(
    colored-man-pages # adds colors to man pages
    osx               # provides a few utilities on macOS
)

# scripting languages
export PATH="$(brew --prefix)/opt/python/libexec/bin:$PATH" # python
export PATH="$(brew --prefix)/opt/ruby/bin:$PATH"           # ruby
export PATH="$(gem environment gemdir)/bin:$PATH"           # ruby gems

# load aliases and functions
source $ZDOTDIR/.aliases
# load colorls tab completion
source $(dirname $(gem which colorls))/tab_complete.sh

# rbenv
which rbenv > /dev/null
if [[ $? = 0 ]] ; then
    export RBENV_ROOT="$XDG_DATA_HOME/rbenv"             # rbenv directory
    export SOLARGRAPH_CACHE="$XDG_CACHE_HOME/solargraph" # solargraph directory
    eval "$(rbenv init -)"                               # evaluate rbenv
fi

# nvm
plugins+=(nvm) # lazy evaluate nvm and load tab completions
which nvm > /dev/null
if [[ $? = 0 ]] ; then
    export NVM_DIR="$XDG_DATA_HOME/nvm" # nvm directory
    export NVM_LAZY=1                   # let oh-my-zsh lazy evaluate nvm
fi

# load oh-my-zsh
source $ZSH/oh-my-zsh.sh
# load zsh syntax highlighting
source $(brew --prefix)/share/zsh-syntax-highlighting\
/zsh-syntax-highlighting.zsh
