#!/usr/bin/env zsh

# notebook and iCloud directories
iCloud="$HOME/Library/Mobile Documents/com~apple~CloudDocs"
Notebook="$iCloud/Notebook"
Music="$HOME/Music/Personal"
# open notebook with vscode
alias notes='code $Notebook'

# exa
alias exa="exa -a --group-directories-first"
alias exal="exa --git --group-directories-first -lghHmUTL2"

# complete uninstallation of casks and formulae
alias uninstall='brew uninstall --zap'
# install brew formulae or cask
alias install='brew install'

alias dv='download-video'
alias da='download-audio'

# download video from URL
function download-video {
    dir=("-d" "$HOME/Downloads")
    zparseopts -D -K -- d:=dir

    youtube-dl --write-sub --write-auto-sub --embed-subs \
        --merge-output-format mp4 -o "${dir[2]}/%(title)s.%(ext)s" $1
}

# download audio from URL
function download-audio {
    dir=("-d" "$HOME/Downloads")
    zparseopts -D -K -- d:=dir

    youtube-dl -x --audio-format mp3 -o "${dir[2]}/%(title)s.%(ext)s" $1
}
